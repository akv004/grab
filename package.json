{
  "name": "grab",
  "version": "1.0.0",
  "description": "A lightweight, developer-friendly tool for capturing, annotating, and exporting on-screen visuals for documentation, debugging, and knowledge sharing.",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && cp src/renderer/*.html dist/renderer/ && cp src/renderer/*.css dist/renderer/",
    "start": "npm run build && electron . --no-sandbox",
    "dev": "tsc && electron . --no-sandbox",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "lint": "eslint src --ext .ts",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "screenshot",
    "capture",
    "annotation",
    "electron",
    "screen-capture"
  ],
  "author": {
    "name": "Amit Verma",
    "email": "akv004@gmail.com"
  },
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "com.akv004.grab",
    "directories": {
      "output": "release"
    },
    "publish": null,
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "identity": null
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}