{
  "name": "grab",
  "version": "1.0.0",
  "description": "A lightweight, developer-friendly tool for capturing, annotating, and exporting on-screen visuals for documentation, debugging, and knowledge sharing.",
  "main": "dist/main/index.js",
  "scripts": {
    "build": "tsc && cp src/renderer/*.html dist/renderer/ && cp src/renderer/*.css dist/renderer/",
    "start": "npm run build && electron .",
    "dev": "tsc && electron .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=test/unit",
    "lint": "eslint src --ext .ts"
  },
  "keywords": [
    "screenshot",
    "capture",
    "annotation",
    "electron",
    "screen-capture"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "electron": "^35.7.5",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^25.0.3",
    "@types/uuid": "^10.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.3"
  }
}